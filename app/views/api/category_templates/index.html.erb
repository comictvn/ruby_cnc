<h1>Listing category_templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Parent</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category_templates.each do |category_template| %>
      <tr>
        <td><%= category_template.name %></td>
        <td><%= category_template.content %></td>
        <td><%= category_template.parent %></td>
        <td><%= category_template.active %></td>
        <td><%= link_to 'Show', category_template %></td>
        <td><%= link_to 'Edit', edit_category_template_path(category_template) %></td>
        <td><%= link_to 'Destroy', category_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category template', new_category_template_path %>
