<h1>Listing image_templates</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Template</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_templates.each do |image_template| %>
      <tr>
        <td><%= image_template.image %></td>
        <td><%= image_template.template %></td>
        <td><%= link_to 'Show', image_template %></td>
        <td><%= link_to 'Edit', edit_image_template_path(image_template) %></td>
        <td><%= link_to 'Destroy', image_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image template', new_image_template_path %>
